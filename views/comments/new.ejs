<% include ../partials/header %>
    <div class="row">
        <h1 style="text-align: center">Add comment to <%= usedstuff.name %></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/<%= usedstuff._id %>/comments" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" placeholder="text" maxlength="180" required>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-default btn-block greenColorBold">Submit!</button>
                </div>
            </form>
            <a href="/<%=usedstuff._id%>" class="greenColor">Go Back</a>
        </div>
    </div>
<% include ../partials/footer %>

