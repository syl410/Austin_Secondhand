<% include ./partials/header %>
    <div class="row">
        <h1 style="text-align: center">Edit <%= usedstuff.name %></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/<%=usedstuff._id%>?_method=PUT" method="POST">
                <div class="form-group">
                    <label for="name">Name</label>
                    <input class="form-control" type="text" name="name" id="name" value="<%= usedstuff.name %>" maxlength="32" required>
                </div>
                <div class="form-group">
                    <label for="cost">Price</label>
                    <input class="form-control" type="number" name="cost" id="cost" value="<%= usedstuff.cost %>" step="0.01" min="0" max="1000000" required>
                </div>
                <div class="form-group">
                    <label for="location">Location</label>
                    <input class="form-control" type="text" name="location" id="location" value="<%= usedstuff.location %>" maxlength="64" required>
                </div>
                <div class="form-group">
                    <label for="description">Description</label>
                    <input class="form-control" type="text" name="description" id="description" value="<%= usedstuff.description %>" maxlength="256" required>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-success btn-block">Update!</button>
                </div>
            </form>
            <a href="/<%=usedstuff._id%>">Go Home Page</a>
        </div>
    </div>
<% include ./partials/footer %>

