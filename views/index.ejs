<% include ./partials/header %> 

     <header class="jumbotron" style="padding-top: 0.3em; padding-bottom: 0.7em">
        <h2 style="color: black;">Buy and Sell Used Stuff in Austin, TX</h2>
        <!-- welcome msg and search -->
        <p>
            <form action="/" method="GET" class="form-inline" id="usedstuff-search">
                <div class="form-group" style="font-size:1.5em">
                    <span class="greenColor">Secondhand stuff,</span> <span style="color: Fuchsia">firsthand fun! </span><input type="text" name="search" placeholder="search and buy..." class="form-control" maxlength="30" >
                </div>
            </form>
        </p>
        <!-- category -->
        <a href="/Electronics" class="noline" style="text-decoration: none;">Electronics</a>
        <a href="/Furniture" class="noline" style="text-decoration: none;">Furniture</a>
        <a href="/Clothing" class="noline" style="text-decoration: none;">Clothing</a>
        <a href="/Automotive" class="noline" style="text-decoration: none;">Automotive</a>
        <a href="/Appliances" class="noline" style="text-decoration: none;">Appliances</a>
        <a href="/Other" class="noline" style="text-decoration: none;">Other</a>
     </header>
     
     <!-- display all items -->
     <div class="row text-center flex-wrap" id="usedstuff-grid">
        <% usedstuffs.forEach(function(usedstuff){ %>
            <div class="col-md-3 col-sm-4 col-xs-6">
                <a href="/<%= usedstuff._id %>">
                    <div class="thumbnail">
                        <%var imageUrl = usedstuff.image.url%>
                        <div class="imgbackground" style='background-image: url("<%=imageUrl%>")'></div>
                        <div class="caption" class="row">                        
                            <p>
                                <span class="left" style="color:green; font-size:medium; font-weight:bold">
                                    $<%=usedstuff.cost%>
                                </span>
                            </p>
                        </div>                    
                        <div class="caption" class="row">                        
                            <p>
                                <span class="left" style="color:black; font-size:medium;">
                                    <% var stuffName = usedstuff.name;
                                        if(usedstuff.name.length > 20) {
                                            stuffName = usedstuff.name.substring(0,20) + "...";
                                    }%>
                                    <%=stuffName%>
                                </span>
                                <br>
                            </p>
                        </div>
                    </div>
                </a>
            </div>
        <% }); %>
    </div>

<% include ./partials/footer %>
