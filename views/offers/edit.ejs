<% include ../partials/header %>
    <div class="row">
        <h1 style="text-align: center">Edit offer</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/<%= usedstuff_id %>/offers/<%=offer._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="number" min="0" max="1000000" value="<%=offer.price %>" name="offer[price]" required>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-success btn-block boldWord">Submit!</button>
                </div>
            </form>
            <a href="/<%= usedstuff_id %>" class="greenColor">Go Back</a>
        </div>
    </div>
<% include ../partials/footer %>

